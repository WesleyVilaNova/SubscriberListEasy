<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubscriberListEasy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--Cor title ToolBar-->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>


    <!--Para trocar a cor do nome da toolbar-->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarStyle.Titler</item>
    </style>

    <style name="ToolbarStyle.Titler" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <!--Para trocar a cor do nome da toolbar-->

</resources>